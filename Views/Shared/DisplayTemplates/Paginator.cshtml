@model FunnelWeb.Web.Models.Paginator
@if (Model.TotalPages > 1) {
<div class="paginator">
    <span class="title">Page: </span>
    @for (var i = 0; i < Model.TotalPages; i++)
    {
        <span class="page">
            @if (i == Model.CurrentPage)
            { 
                @MvcHtmlString.Create((i + 1).ToString())
            }
            else if (i == 0)
            { 
                @Html.ActionLink((i + 1).ToString(), Model.ActionName) 
            }
            else
            { 
                @Html.ActionLink((i + 1).ToString(), Model.ActionName, new { pageNumber = i }) 
            }
        </span>
    }
</div>
}